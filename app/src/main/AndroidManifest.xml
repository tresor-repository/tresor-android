<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tresor">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TresorApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".session.register.view.activity.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".profile.ProfilePageActivity" />
        <activity android:name=".statistic.totalspending.activity.HighlightedDetailActivity" />
        <activity android:name=".home.activity.AddPaymentActivity" />
        <activity android:name=".home.activity.EditPaymentActivity" />
        <activity android:name=".statistic.totalspending.activity.TotalSpendingActivity" />
        <activity android:name=".statistic.hashtagusage.activity.HashTagUsageComparisonActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".statistic.spendingpiechart.HashtagPieChartActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".statistic.HashTagHistoryActivity"/>

    </application>

</manifest>